@{
    ViewBag.Title = "Cart";
}
@using StoreMVC.Controllers

<h2>Shopping Cart</h2>

<table>
    <tr>
        <th>Option</th>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Subtotal</th>
    </tr>
    @{
        decimal s = 0;
    }
    @foreach (Item item in (List<Item>)Session["cart"])
    {
        s += item.Pr.Price * item.Quantity;
        <tr>
            <td>@Html.ActionLink("Delete", "Delete", "ShoppingCart", new { id = item.Pr.ID}, null)</td>
            <td>@item.Pr.ID</td>
            <td>@item.Pr.Name</td>
            <td>@item.Pr.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Pr.Price * item.Quantity)</td>
        </tr>
    }
    <tr>
        <td align="right" colspan="5">Total</td>
        <td>@s</td>
    </tr>
</table>
<br />
@Html.ActionLink("Continue Shopping", "Index", "List")
